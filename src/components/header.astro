---
import { Header as HeaderClass } from "../Classes/Header";

const headerObject = new HeaderClass();

const siteName = headerObject.getSiteName();
const navItems = headerObject.getNavItems();
---

<header class="max-w-[1280px] mx-auto py-4">
  <nav
    class="flex flex-row justify-between items-center mt-12 text-sm font-semibold"
  >
    <section>
      <span class="text-2xl">{siteName}</span>
    </section>
    <ul class="flex flex-row gap-8 items-center">
      {
        navItems.length > 0 &&
          navItems.map((items) => (
            <li class="group transition-all duration-100 ease-in-out">
              <a class="active:text-red-500 bg-left-bottom bg-gradient-to-r cursor-pointer from-textTeal to-textTeal bg-[length:0%_2px] bg-no-repeat group-hover:bg-[length:100%_2px] py-1 transition-all duration-200 ease-out">
                {items.label}
              </a>
            </li>
          ))
      }
    </ul>
  </nav>
</header>
